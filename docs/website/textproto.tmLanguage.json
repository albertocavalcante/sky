{
    "name": "textproto",
    "scopeName": "source.textproto",
    "fileTypes": ["textproto", "pbtxt", "prototext", "txtpb"],
    "patterns": [
        {"include": "#comment"},
        {"include": "#field"}
    ],
    "repository": {
        "comment": {
            "name": "comment.line.number-sign.textproto",
            "begin": "#",
            "end": "$",
            "beginCaptures": {
                "0": {"name": "punctuation.definition.comment.textproto"}
            }
        },
        "field": {
            "patterns": [
                {"include": "#extension-field"},
                {"include": "#regular-field"}
            ]
        },
        "extension-field": {
            "begin": "(\\[)([a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*)(\\])\\s*(:)?",
            "end": "(?=[\\n\\r#\\}\\]])|(?<=\\})|(?<=\\])",
            "beginCaptures": {
                "1": {"name": "punctuation.definition.extension.begin.textproto"},
                "2": {"name": "entity.name.type.extension.textproto"},
                "4": {"name": "punctuation.definition.extension.end.textproto"},
                "5": {"name": "punctuation.separator.key-value.textproto"}
            },
            "patterns": [
                {"include": "#value"}
            ]
        },
        "regular-field": {
            "begin": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)?",
            "end": "(?=[\\n\\r#\\}\\]])|(?<=\\})|(?<=\\])",
            "beginCaptures": {
                "1": {"name": "entity.name.tag.field.textproto"},
                "2": {"name": "punctuation.separator.key-value.textproto"}
            },
            "patterns": [
                {"include": "#value"}
            ]
        },
        "value": {
            "patterns": [
                {"include": "#comment"},
                {"include": "#message"},
                {"include": "#array"},
                {"include": "#string-double"},
                {"include": "#string-single"},
                {"include": "#boolean"},
                {"include": "#float"},
                {"include": "#integer"},
                {"include": "#enum-value"}
            ]
        },
        "message": {
            "begin": "\\{",
            "end": "\\}",
            "beginCaptures": {
                "0": {"name": "punctuation.definition.block.begin.textproto"}
            },
            "endCaptures": {
                "0": {"name": "punctuation.definition.block.end.textproto"}
            },
            "patterns": [
                {"include": "#comment"},
                {"include": "#field"}
            ]
        },
        "array": {
            "begin": "\\[",
            "end": "\\]",
            "beginCaptures": {
                "0": {"name": "punctuation.definition.array.begin.textproto"}
            },
            "endCaptures": {
                "0": {"name": "punctuation.definition.array.end.textproto"}
            },
            "patterns": [
                {"include": "#comment"},
                {"include": "#value"},
                {
                    "match": ",",
                    "name": "punctuation.separator.array.textproto"
                }
            ]
        },
        "string-double": {
            "name": "string.quoted.double.textproto",
            "begin": "\"",
            "end": "\"",
            "beginCaptures": {
                "0": {"name": "punctuation.definition.string.begin.textproto"}
            },
            "endCaptures": {
                "0": {"name": "punctuation.definition.string.end.textproto"}
            },
            "patterns": [
                {"include": "#string-escape"}
            ]
        },
        "string-single": {
            "name": "string.quoted.single.textproto",
            "begin": "'",
            "end": "'",
            "beginCaptures": {
                "0": {"name": "punctuation.definition.string.begin.textproto"}
            },
            "endCaptures": {
                "0": {"name": "punctuation.definition.string.end.textproto"}
            },
            "patterns": [
                {"include": "#string-escape"}
            ]
        },
        "string-escape": {
            "name": "constant.character.escape.textproto",
            "match": "\\\\(?:[abfnrtv\\\\'\"]|x[0-9A-Fa-f]{2}|[0-7]{1,3}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
        },
        "boolean": {
            "name": "constant.language.boolean.textproto",
            "match": "\\b(true|false)\\b"
        },
        "float": {
            "name": "constant.numeric.float.textproto",
            "match": "[-+]?(?:\\d+\\.\\d*|\\.\\d+)(?:[eE][-+]?\\d+)?|[-+]?\\d+[eE][-+]?\\d+|[-+]?(?:inf|nan)\\b"
        },
        "integer": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.textproto",
                    "match": "[-+]?0[xX][0-9A-Fa-f]+"
                },
                {
                    "name": "constant.numeric.octal.textproto",
                    "match": "[-+]?0[0-7]+"
                },
                {
                    "name": "constant.numeric.decimal.textproto",
                    "match": "[-+]?[0-9]+"
                }
            ]
        },
        "enum-value": {
            "name": "constant.other.enum.textproto",
            "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
    }
}
